<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Hacker"
            android:textSize="24sp"
            android:textStyle="bold" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android-to-Android Exploitation"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USB Attack (OTG)"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />
        
        <Button
            android:id="@+id/usbAttackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Execute USB Attack"
            android:layout_marginTop="8dp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network Attack"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />
        
        <EditText
            android:id="@+id/targetIpEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Target IP (e.g., 192.168.43.1)"
            android:inputType="text" />
        
        <Button
            android:id="@+id/networkAttackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan Network"
            android:layout_marginTop="8dp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reverse Shell"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />
        
        <EditText
            android:id="@+id/lhostEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Listener IP"
            android:inputType="text" />
        
        <EditText
            android:id="@+id/lportEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Listener Port"
            android:inputType="number" />
        
        <Button
            android:id="@+id/shellButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Reverse Shell"
            android:layout_marginTop="8dp" />
        
        <Button
            android:id="@+id/dataExfilButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exfiltrate Data"
            android:layout_marginTop="8dp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />
        
        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f0"
            android:padding="8dp"
            android:textSize="12sp"
            android:minHeight="200dp" />
    </LinearLayout>
</ScrollView>
